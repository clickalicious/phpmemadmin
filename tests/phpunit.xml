<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        bootstrap="../lib/Clickalicious/PhpMemAdmin/Bootstrap.php"
        backupStaticAttributes="false"

        cacheTokens="false"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        forceCoversAnnotation="false"
        mapTestClassNameToCoveredClassName="false"

        processIsolation="false"
        stopOnError="false"
        stopOnFailure="false"
        stopOnIncomplete="false"
        stopOnSkipped="false"

        strict="false"
        verbose="false"

        testdox="true"
        >
    <testsuites>
        <testsuite name="phpMemAdmin">
            <directory>.</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log
            type="coverage-html"
            target="../docs/coverage"
            charset="UTF-8"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70"
        />
    </logging>
</phpunit>
